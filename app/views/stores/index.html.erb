<% provide(:title, 'Stores') %>
<h1>Listing stores</h1>

<p><%= link_to 'New Store', new_store_path, class: 'btn-small btn-primary' %></p>

<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.name %></td>
        <td><%= store.address %></td>
        <td>
          <%= link_to 'Show', store, class: 'btn-small btn-info' %>
          <%= link_to 'Edit', edit_store_path(store), class: 'btn-small btn-info' %>
          <%= link_to 'Destroy', store, class: 'btn-small btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
